{
  "include": ["**/*.ts", "**/*.tsx", "./.*.cjs"],
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Bundler",
    "module": "ES2022",
    "noEmit": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "types": ["@webgpu/types", "vite/client"],
    "jsx": "react"
  }
}
